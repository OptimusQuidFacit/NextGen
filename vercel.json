{
    "rewrites": [ 
      { "source": "/(.*)", "destination": "/index.html" } 
    ],
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/**/*.js",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
        {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      }
      ]
  }
  