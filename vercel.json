{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      },
      {
        "src": "api/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/index.js",
        "env": {
            "root": "api/.env"
        }
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ]
  }
  