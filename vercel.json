{
    "rewrites": [ 
      { "source": "/(.*)", "destination": "/index.html" },
      {
        "source": "/api/(.*)",
        "destination": "/api/$1"
      }
    ],
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/**/*.js",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ]
  }
  